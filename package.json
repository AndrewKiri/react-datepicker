{
  "name": "@y0c/react-datepicker",
  "version": "0.1.3",
  "description": "React Datepicker Component",
  "author": "y0c",
  "license": "MIT",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "homepage": "https://github.com/y0c/react-datepicker",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev webpack-dev-server --progress --mode development --config webpack.config.dev.js",
    "build": "webpack -p --progress --mode production --config webpack.config.build.js",
    "test": "npx cross-env TZ=Asia/Seoul npx jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage && codecov",
    "lint": "tslint --project . --config ./tslint.json",
    "precommit": "npx lint-staged"
  },
  "lint-staged": {
    "{src}/**/*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://y0c@github.com/y0c/react-datepicker.git"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "4.17.10",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "prettier": {
    "printWidth": 100,
    "parser": "typescript",
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/components/**/*.{ts,tsx}",
      "**/src/utils/**/*.{ts,tsx}",
      "!**/index.ts",
      "!**/node_modules/**",
      "!**/lib/**",
      "!**/examples/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  },
  "devDependencies": {
    "typescript": "^3.2.2",
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.118",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/sinon": "^7.0.3",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "5.2.0",
    "css-loader": "2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-sass": "4.11.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0",
    "sass-loader": "7.1.0",
    "sass-material-colors": "^0.0.5",
    "sinon": "^7.2.2",
    "style-loader": "0.23.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "url-loader": "^1.1.2",
    "webpack": "4.28.4",
    "webpack-cli": "3.2.1",
    "webpack-dev-server": "3.1.14",
    "webpack-merge": "4.2.1"
  },
  "bugs": {
    "url": "https://github.com/y0c/react-datepicker/issues"
  },
  "keywords": [
    "react",
    "datepicker"
  ]
}
